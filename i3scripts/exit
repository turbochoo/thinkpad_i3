#!/bin/bash
############################################################
# 
############################################################

function lock {
    i3lock --ignore-empty-password --show-failed-attempts -e -i $HOME/.config/i3/i3scripts/pictures/rabbit.png
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;

	reboot)
        systemctl reboot
        ;;
    poweroff)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|poweroff}"
        exit 2
esac

exit 0
