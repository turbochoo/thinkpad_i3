client.urgent           #FAC863     #FAC863     #000000     #CDD3DE    #FAC863

# Urgency handling
focus_on_window_activation focus
force_display_urgency_hint 200 ms


# Do not follow the mouse
focus_follows_mouse yes

# Floating stuff
